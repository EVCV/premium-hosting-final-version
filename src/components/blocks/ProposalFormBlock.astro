---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";

import propImg from "../../assets/pics/proposal-pic.png";

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  className?: string;
}

const {
  title = "Let's make things happen",
  description = "Contact us today to learn more about how our digital marketing services can help your business grow and succeed online.",
  ctaText = "Get your free proposal",
  className = ""
} = Astro.props;
---

<section class={`section ${className}`}>
  <Card>
    <div
      class="flex bg-[#F3F3F3] rounded-[45px] p-[60px] relative mt-[123px] mb-[163px]"
    >
      <div class="w-full md:w-[40%] flex flex-col gap-[26px]">
        <h2>{title}</h2>
        <p>
          {description}
        </p>
        <button class="btn-primary">{ctaText}</button>
      </div>
      <picture
        class="hidden md:flex absolute right-[-10%] lg:right-0 top-[-15%] h-[450px] items-center justify-center"
      >
        <Image
          src={propImg}
          alt="This is an illustration"
          class="hidden md:flex lg:h-full lg:w-auto"
        />
      </picture>
    </div>
  </Card>
</section>
