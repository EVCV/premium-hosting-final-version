---
interface Props {
  columns?: 1 | 2 | 3 | 4;
  gap?: 'sm' | 'md' | 'lg';
  mobileColumns?: 1 | 2;
  className?: string;
  children?: any;
}

const {
  columns = 3,
  gap = 'md',
  mobileColumns = 1,
  className = ""
} = Astro.props;

const columnClasses = {
  1: 'lg:grid-cols-1',
  2: 'lg:grid-cols-2',
  3: 'lg:grid-cols-3',
  4: 'lg:grid-cols-4'
};

const mobileColumnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-2'
};

const gapClasses = {
  sm: 'gap-4',
  md: 'gap-6',
  lg: 'gap-8'
};
---

<div class={`grid ${mobileColumnClasses[mobileColumns]} md:grid-cols-2 ${columnClasses[columns]} ${gapClasses[gap]} ${className}`}>
  <slot />
</div>