---
import ServiceFeatureBlock from "./ServiceFeatureBlock.astro";

interface Props {
  className?: string;
  imagePosition?: 'left' | 'right';
  backgroundColor?: string;
  customTitle?: string;
  customDescription?: string;
  customLink?: {
    text: string;
    href: string;
  };
}

const {
  className = "",
  imagePosition = 'left',
  backgroundColor = "bg-white",
  customTitle = "Cloud Hosting",
  customDescription = "Harness the power of the cloud with our scalable hosting solution. Auto-scaling resources, global CDN, and 99.99% uptime guarantee for mission-critical applications.",
  customLink = {
    text: "Discover Cloud Solutions",
    href: "/cloud-hosting"
  }
} = Astro.props;

// Placeholder image - replace with actual Cloud hosting image
const cloudImage = {
  src: "https://via.placeholder.com/600x400/0EA5E9/white?text=Cloud+Hosting",
  alt: "Cloud Hosting"
};
---

<ServiceFeatureBlock
  title={customTitle}
  description={customDescription}
  image={cloudImage}
  link={customLink}
  imagePosition={imagePosition}
  className={className}
  backgroundColor={backgroundColor}
/>