---
interface Props {
  title: string;
  description: string;
  image: any;
  link: {
    text: string;
    href: string;
  };
  imagePosition?: 'left' | 'right';
  className?: string;
  backgroundColor?: string;
}

const {
  title,
  description,
  image,
  link,
  imagePosition = 'left',
  className = "",
  backgroundColor = "bg-white"
} = Astro.props;
---

<section class={`py-16 ${backgroundColor} ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${imagePosition === 'right' ? 'lg:grid-flow-col-dense' : ''}`}>
      <!-- Content -->
      <div class={imagePosition === 'right' ? 'lg:col-start-1' : ''}>
        <h2 class="text-3xl lg:text-4xl font-bold text-dark mb-6">
          {title}
        </h2>
        
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          {description}
        </p>
        
        <a 
          href={link.href}
          class="inline-flex items-center btn-primary px-6 py-3 hover:shadow-lg transition-all duration-300"
        >
          {link.text}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
      
      <!-- Image -->
      <div class={`${imagePosition === 'right' ? 'lg:col-start-2' : ''}`}>
        <div class="relative">
          <img 
            src={image.src} 
            alt={title}
            class="w-full h-auto rounded-lg shadow-xl luxury-card"
            loading="lazy"
          />
          
          <!-- Decorative element -->
          <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gold/20 rounded-full blur-2xl"></div>
        </div>
      </div>
    </div>
  </div>
</section>