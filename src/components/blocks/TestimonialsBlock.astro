---
import SectionTitle from "../ui/SectionTitle.astro";
import SwiperSlider from "../ui/SwiperSlider.astro";

interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const {
  title = "Testimonials",
  description = "Hear from Our Satisfied Clients: Read Our Testimonials to Learn More about Our Digital Marketing Services",
  className = ""
} = Astro.props;
---

<section id="testimonials" class={`py-16 bg-gradient-to-b from-white to-gray-50 relative overflow-hidden ${className}`}>
  <!-- Background decoration -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-10 w-32 h-32 bg-dark/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-32 left-10 w-48 h-48 bg-gold/5 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <SectionTitle
        sectionTitle={title}
        description={description}
      />
    </div>
    <div class="rounded-[45px] bg-dark text-white">
      <SwiperSlider />
    </div>
  </div>
</section>
