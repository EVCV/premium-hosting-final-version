  }>;
}

const {
  title = "Everything You Need to Succeed Online",
  subtitle = "Premium hosting features",
  description = "Our hosting platform includes everything you need to build, deploy, and scale your website with confidence.",
  features = [
    {
      icon: "‚ö°",
      title: "Lightning Fast Performance",
      description: "SSD storage and optimized servers ensure your website loads in milliseconds, not seconds."
    },
    {
      icon: "üîí",
      title: "Advanced Security",
      description: "Free SSL certificates, DDoS protection, and daily security scans keep your site secure."
    },
    {
      icon: "üîÑ",
      title: "Daily Backups",
      description: "Automated daily backups ensure your data is always safe and easily recoverable."
    },
    {
      icon: "üìû",
      title: "24/7 Expert Support",
      description: "Our certified support team is available around the clock to help with any questions."
    },
    {
      icon: "üéõÔ∏è",
      title: "cPanel Control Panel",
      description: "Industry-standard cPanel gives you full control over your hosting environment."
    },
    {
      icon: "üìà",
      title: "99.9% Uptime Guarantee",
      description: "Your website stays online with our industry-leading uptime guarantee and monitoring."
    }
  ]
} = Astro.props;
---

<section class="py-24 bg-white relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-10 w-32 h-32 bg-gold/5 rounded-full blur-2xl"></div>
    <div class="absolute bottom-32 left-10 w-40 h-40 bg-dark/5 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 bg-gold/10 border border-gold/20 rounded-full mb-6">
        <span class="text-dark font-medium text-sm">{subtitle}</span>
      </div>
      
      <h2 class="text-4xl lg:text-5xl font-bold text-dark mb-6">
        {title}
      </h2>
      
      {description && (
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          {description}
        </p>
      )}
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {features.map((feature, index) => (
        <div 
          class="feature-card luxury-card p-8 text-center group"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="feature-icon text-5xl mb-6 interactive-icon">
            {feature.icon}
          </div>
          
          <h3 class="text-xl font-semibold text-dark mb-4 group-hover:text-gold transition-colors duration-300">
            {feature.title}
          </h3>
          
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="inline-flex flex-col sm:flex-row gap-4">
        <a href="#pricing" class="btn-primary text-lg px-8 py-4">
          View All Plans
        </a>
        <a href="/contact" class="btn-secondary text-lg px-8 py-4">
          Talk to Expert
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .feature-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-card:hover {
    transform: translateY(-8px);
  }

  .feature-icon {
    filter: grayscale(0);
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 8px 16px rgba(212, 175, 55, 0.3));
  }
</style>