---
import BaseTemplate from '../templates/layouts/BaseTemplate.astro';

// Page data
const pageData = {
  title: "Contact Us - Premium Hosting Support",
  description: "Get in touch with our hosting experts. 24/7 support available via phone, email, and live chat for all your web hosting needs."
};
---

<BaseTemplate title={pageData.title} description={pageData.description}>
  <section class="pt-32 pb-24 bg-gradient-to-br from-gray-50 via-white to-gray-100 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center px-4 py-2 bg-gold/10 border border-gold/20 rounded-full mb-6">
          <span class="text-dark font-medium text-sm">üìû 24/7 Support Available</span>
        </div>
        
        <h1 class="text-4xl lg:text-5xl font-bold text-dark mb-6">
          Get In Touch With Our Experts
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Have questions about our hosting services? Our team of certified experts is here to help you find the perfect solution.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Contact Form -->
        <div class="luxury-card p-8 lg:p-12">
          <h2 class="text-2xl font-bold text-dark mb-6">Send Us a Message</h2>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                  First Name
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors"
                  placeholder="John"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number (Optional)
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors"
                placeholder="+44 20 1234 5678"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors"
              >
                <option value="">Select a topic...</option>
                <option value="sales">Sales Inquiry</option>
                <option value="support">Technical Support</option>
                <option value="billing">Billing Question</option>
                <option value="migration">Website Migration</option>
                <option value="enterprise">Enterprise Solutions</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-gold focus:outline-none transition-colors resize-none"
                placeholder="Tell us how we can help you..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="btn-primary w-full text-lg py-4 ripple"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          
          <!-- Contact Methods -->
          <div class="luxury-card p-8">
            <h3 class="text-xl font-bold text-dark mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-gold text-xl">üìû</span>
                </div>
                <div>
                  <h4 class="font-semibold text-dark">Phone Support</h4>
                  <p class="text-gray-600">+44 20 3808 9448</p>
                  <p class="text-sm text-gray-500">Available 24/7</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-gold text-xl">üìß</span>
                </div>
                <div>
                  <h4 class="font-semibold text-dark">Email Support</h4>
                  <p class="text-gray-600">support@premium-hosting.co.uk</p>
                  <p class="text-sm text-gray-500">Response within 1 hour</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-gold text-xl">üí¨</span>
                </div>
                <div>
                  <h4 class="font-semibold text-dark">Live Chat</h4>
                  <p class="text-gray-600">Available on our website</p>
                  <p class="text-sm text-gray-500">Instant responses</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-gold text-xl">üè¢</span>
                </div>
                <div>
                  <h4 class="font-semibold text-dark">Address</h4>
                  <p class="text-gray-600">123 Tech Street<br>London, EC1A 1BB<br>United Kingdom</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="luxury-card p-8">
            <h3 class="text-xl font-bold text-dark mb-6">Office Hours</h3>
            
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Phone Support:</span>
                <span class="font-semibold text-dark">24/7</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Email Support:</span>
                <span class="font-semibold text-dark">24/7</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Live Chat:</span>
                <span class="font-semibold text-dark">24/7</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Sales Team:</span>
                <span class="font-semibold text-dark">9 AM - 6 PM GMT</span>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="luxury-card p-8">
            <h3 class="text-xl font-bold text-dark mb-6">Quick Actions</h3>
            
            <div class="space-y-3">
              <a href="https://cp.premium-hosting.co.uk" target="_blank" class="btn-secondary w-full text-center">
                Client Area Login
              </a>
              <a href="/help" class="btn-tertiary w-full text-center">
                Help Documentation
              </a>
              <a href="/status" class="text-gold hover:text-dark transition-colors text-center block">
                System Status ‚Üí
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
</BaseTemplate>