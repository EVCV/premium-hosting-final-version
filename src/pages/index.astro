---
import BaseTemplate from '../templates/layouts/BaseTemplate.astro';
import TemplateRenderer from '../components/TemplateRenderer.astro';
import templates from '../data/templates.json';
import "../styles/globals.css";

// Get homepage template configuration
const templateConfig = (templates as any)['homepage'];

// Homepage data (can be extended with CMS data later)
const pageData = {
  pageType: 'homepage'
};
---

<BaseTemplate
  title="Premium Hosting"
  description="Premium Web hosting services and solutions"
>
  <TemplateRenderer template={templateConfig} data={pageData} />
</BaseTemplate>
